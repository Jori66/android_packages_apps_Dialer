<resources>
    <!--  Primary text color in the Dialer -->
    <color name="dialtacts_primary_text_color">#ffffff</color>
    <!-- Secondary text color in the Dialer -->
    <color name="dialtacts_secondary_text_color">#ffaaaaaa</color>
    <color name="dialer_red_highlight_color">#ff1744</color>
    <color name="dialer_green_highlight_color">#ffb0bec5</color>

    <color name="setting_background_color">@*android:color/black</color>

    <!-- Color of the text describing an unconsumed missed call. -->
    <color name="call_log_missed_call_highlight_color">@color/dialer_red_highlight_color</color>

    <!-- Color of the text describing an unconsumed voicemail. -->
    <color name="call_log_voicemail_highlight_color">#33b5e5</color>

    <!-- Tint of the recent card phone icon -->
    <color name="recent_call_log_item_phone_icon_tint">#ffffff</color>
    <color name="call_log_extras_text_color">#ff7f7f7f</color>

    <!--
         Colour of voicemail progress bar to the right of position indicator.
         Same as the background color of the dialer
    -->
    <color name="voicemail_playback_seek_bar_yet_to_play">#cecece</color>

    <!-- Colour of voicemail progress bar to the left of position indicator. -->
    <color name="voicemail_playback_seek_bar_already_played">#39c9ff</color>

    <!-- Standard color for selected items. -->
    <color name="item_selected">#66607d8b</color>

    <!-- White background for dialer -->
    <color name="background_dialer_white">@*android:color/black</color>
    <!-- Background color of new dialer activity -->
    <color name="background_dialer_light">@*android:color/black</color>
    <!-- Background color for search results and call details -->
    <color name="background_dialer_results">#ff0d1214</color>
    <!-- Background color of dialer list items (contacts, call log entries) -->
    <color name="background_dialer_list_items">#ff000000</color>
    <color name="background_dialer_details_list_items">#ff000000</color>

    <!-- Color of the 1dp divider that separates favorites -->
    <color name="favorite_contacts_separator_color">#ff1f1f1f</color>

    <color name="searchbox_icon_tint">#ff90a4ae</color>

    <!-- Color of the contact name in favorite tiles -->
    <color name="contact_tile_name_color">#ffffff</color>

    <color name="contact_list_name_text_color">@color/dialtacts_primary_text_color</color>

    <!-- Undo dialogue color -->
    <color name="undo_dialogue_text_color">#ff4d4d4d</color>

    <color name="empty_list_text_color">#ffb2b2b2</color>

    <color name="remove_text_color">#ffffffff</color>

    <!-- Text color for the "Remove" text when a contact is dragged on top of the remove view -->
    <color name="remove_highlighted_text_color">#ffff3f3b</color>

    <!-- Color of the bottom border below the contacts grid on the main dialer screen. -->
    <color name="contacts_grid_bottom_border_color">#16000000</color>

    <color name="call_log_expanded_background_color">#ff263238</color>
    <!-- Color of actions in expanded call log entries.  This text color represents actions such
         as call back, play voicemail, etc. -->
    <color name="call_log_action_text">#ffb0bec5</color>

    <!-- Color for missed call icons. -->
    <color name="missed_call">#ff2e58</color>

    <!-- Color for answered or outgoing call icons. -->
    <color name="answered_call">@color/dialer_green_highlight_color</color>

    <!-- Color for icons in the actionbar -->
    <color name="actionbar_icon_color">#ffffff</color>

    <color name="dialer_dialpad_touch_tint">#64b0bec5</color>

    <color name="floating_action_button_touch_tint">#80ffffff</color>

</resources>
